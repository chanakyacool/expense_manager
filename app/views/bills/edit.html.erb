<div class="bill_form_container">
  <h1>Add Bill</h1>
  <%= form_for(@bill, html: {role: "form"}) do |f| %>

   <div class="dropdown">
      <%= f.label :item %>
      <%=  f.select :item, [['Lunch', "Lunch"], ['Dinner', "Dinner"], ['Snacks', "Snacks"], ['Other', "Other"]], {},{class: "form-control"} %>
    </div>
		 <br>

    <div class="field form-group">
      <%= f.label :amount %>
      <%= f.text_field :amount, class: "form-control" %>
    </div>

    <div class="field form-group">
      <%= f.label :location %>
      <%= f.text_field :location, class: "form-control" %>
    </div>

    <div class="field dropdown">
      <label>Paid By</label>
      <%=select(:bill, :user_id, @members.all.collect {|m| [ m.name, m.id ] }, {}, {class: 'form-control'})%>
    </div>
     <br>
    <span class="actions">
      <%= f.submit "Update", class: "btn btn-default" %>
    </span>

  <% end %>
</div>